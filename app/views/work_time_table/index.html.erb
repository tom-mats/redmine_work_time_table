<h2>WorkTimeTable</h2>
<%= link_to '<<', {:controller => 'work_time_table', :action => 'index', :month => (@month - 1.month).strftime('%Y-%m-%d')} %>
<%= @month.strftime('%Y-%m') %>
<%= link_to '>>', {:controller => 'work_time_table', :action => 'index', :month => (@month + 1.month).strftime('%Y-%m-%d')} %>

<table class = "table worktime">
  <thead>
    <tr>
      <th class="date">
        Date
      </th>
      <% total_each = {:full => 0} %>
      <% @activities.each do |k, a| %>
        <th>
          <% total_each[a] = 0.0 %>
          <%= a %>
        </th>
      <% end %>
      <th>
        Total
      </th>
    </tr>
  </thead>
  <tbody>
    <% (@month.beginning_of_month.to_date..@month.end_of_month ).each_with_index do |day, i| %>
    <tr class="row <%= (i + 1) % 2 == 0 ? "even" : "odd"%>">
      <% d = day.strftime('%Y-%m-%d') %>
      <td class="date">
        <%= d %>
      </td>
      <% total = 0.0 %>
      <% @activities.each do |k, a| %>
        <td class="activity <%= "activity_#{k}" %>">
          <% if @time_log[d][a] %>
            <%= link_to @time_log[d][a], {:controller => 'timelog', :action => 'index', :user_id => 'me', :activity_id => k, :spent_on => d} %>
            <% total_each[a] += @time_log[d][a].to_f %>
            <% total_each[:full] += @time_log[d][a].to_f %>
          <% else %>
            <%= '-' %>
          <% end %>
        </td>
      <% end %>
      <td class = "total day">
        <%= @time_log[d].map{ |k,v| v }.inject{ |sum, n| sum + n } || 0.0 %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <td>
      <%= @month.strftime('%Y-%m') %>
    </td>
    <% @activities.each do |k, a| %>
      <td class="total activity <%= "activity_#{k}"%>">
        <%= total_each[a] %>
      </td>
    <% end %>
    <td class="total month">
      <%= total_each[:full] %>
    </td>
  </tfoot>
</table>
